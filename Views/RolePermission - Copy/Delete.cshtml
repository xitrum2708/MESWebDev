<div class="app-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">@TranslationService.GetTranslation("ConfirmDelete", languageCode) </h3>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-2">
                                @TranslationService.GetTranslation("RoleName", languageCode)
                            </dt>
                            <dd class="col-sm-10">
                                @Model.RoleName
                            </dd>
                            <dt class="col-sm-2">
                                @TranslationService.GetTranslation("PermissionKey", languageCode)
                            </dt>
                            <dd class="col-sm-10">
                                @Model.PermissionKey
                            </dd>
                            <dt class="col-sm-2">
                                @TranslationService.GetTranslation("GrantedAt", languageCode)
                            </dt>
                            <dd class="col-sm-10">
                                @Model.GrantedAt.ToString("dd/MM/yyyy HH:mm")
                            </dd>
                        </dl>
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="RoleId" />
                            <input type="hidden" asp-for="PermissionId" />
                            <button type="submit" class="btn btn-danger">@TranslationService.GetTranslation("Delete", languageCode)</button>
                            <a asp-action="Index" class="btn btn-secondary">@TranslationService.GetTranslation("BackToList", languageCode)</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}