@model List<MESWebDev.DTO.BreadcrumbItemDto>

<ol class="breadcrumb d-flex justify-content-center align-items-center" style="margin-bottom:0px !important">
    @for (int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];
        // Nếu URL là "#" hoặc rỗng, hiển thị mục đó mà không có link.
        bool isNonNavigable = string.IsNullOrEmpty(item.Url) || item.Url.Trim() == "#";

        if (i < Model.Count - 1)
        {
            <li class="breadcrumb-item fw-bold text-success">
          @*       @if (isNonNavigable)
                {
                    @item.Title?.ToUpper()
                }
                else
                {
                    <a href="@item.Url" class="fw-bold text-decoration-none">@item.Title?.ToUpper()</a>
                } *@
                @item.Title?.ToUpper()

            </li>
        }
        else
        {
            // Mục cuối cùng hiển thị ở dạng active (không link)
            <li class="breadcrumb-item active fw-bold text-dark" aria-current="page">@item.Title?.ToUpper()</li>
        }
    }
</ol>
