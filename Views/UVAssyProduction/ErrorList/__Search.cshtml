 <form id="fSearch">
    <div class="modal fade" id="searchModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">@* " modal-lg"> *@
        <div class="modal-content">
            <div class="modal-header table-success">
                <h5 class="modal-title">
                    <i class="bi bi-search"></i>
                    Search
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body bg-warning">
                <div class="row g-2">

                    <div class="col-4">Lot No</div>
                    <div class="col-8"><input type="text" class="form-control" id="ip_lotNo" /></div>

                    <div class="col-4">Process Name</div>
                    <div class="col-8"><input type="text" class="form-control" id="ip_processName" /></div>
                    
                </div>                
            </div>
            <div class="modal-footer">
                <a id="btnSearch" class="btn btn-sm btn-primary">
                    <i class="bi bi-search"></i>
                    Search
                </a>
                <button type="button" class="btn btn-sm btn-secondary" data-bs-dismiss="modal">
                    <i class="fa-regular fa-circle-xmark"></i>
                    Cancel
                </button>
            </div>
        </div>
    </div>
</div>
</form>
