@model ManpowerModel

<div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Employee</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form asp-action="ManpowerEdit" asp-controller="Admin" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="mb-3">
                        <label>com</label>
                        <input type="text" class="form-control" id="empName" name="Name" />
                    </div>
                    <div class="mb-3">
                        <label>Position</label>
                        <input type="text" class="form-control" id="empPosition" name="Position" />
                    </div>
                    <div class="mb-3">
                        <label>Email</label>
                        <input type="email" class="form-control" id="empEmail" name="Email" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="saveBtn">Save</button>
            </div>
        </div>
    </div>
</div>
