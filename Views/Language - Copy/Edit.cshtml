<div class="app-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">@TranslationService.GetTranslation("EditLanguage", languageCode) </h3>
                    </div>
                    <div class="card-body">
                        <form asp-action="Edit" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="LanguageId" />
                            <div class="form-group">
                                <label asp-for="Code">@TranslationService.GetTranslation("LanguageCode", languageCode) </label>
                                <input asp-for="Code" class="form-control" />
                                <span asp-validation-for="Code" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Name">@TranslationService.GetTranslation("LanguageName", languageCode)</label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>                           
                            <div class="form-group form-check">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                <label asp-for="IsActive" class="form-check-label">Is Active</label>
                            </div>
                            <button type="submit" class="btn btn-primary">@TranslationService.GetTranslation("Save", languageCode)</button>
                            <a href="@Url.Action("Index", "Language")" class="btn btn-secondary">@TranslationService.GetTranslation("Cancel", languageCode)</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}