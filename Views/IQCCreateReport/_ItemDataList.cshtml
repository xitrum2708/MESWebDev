@using MESWebDev.DTO
@using MESWebDev.Models.IQC
@model List<ReportItemDto>



<style>
    .table-responsive {
    max-height: 800px;
    overflow-y: auto;
    }

    .table-responsive thead th {
    position: sticky;
    top: 0;
    background: #fff;
    z-index: 10;
    }
</style>
@{
    var form = (string)ViewBag.FormPartial;
    var IsFinished = ViewBag.IsFinished;
}
@if (!Model.Any())
{
    <p class="text-muted">Chưa có dữ liệu nào.</p>
}
else
{
    <table class="table table-responsive">
        <thead>
            <tr>
                @if (IsFinished == "PENDING" || IsFinished == "RETURN TO INSPECTOR")
                {
                    <th>Action</th>
                }                

                @* Cột riêng Delivery *@
                @if (form == "_DeliveryForm" || form=="_FinalForm")
                {
                    <th>Judgment</th>
                }
                @* Cột riêng Appearance *@
                @if (form == "_AppearanceForm")
                {
                    <th>Sampling Size</th>
                    <th>Error Name</th>
                    <th>CRI</th>
                    <th>MAJ</th>
                    <th>MIN</th>
                    <th>Standard</th>
                }
                @if (form == "_DimensionalForm")
                {
                    <th>Sampling Size</th>
                    <th>Error Name</th>
                    <th>Spec</th>
                    <th>SpecDetail</th>
                    <th>CRI</th>
                    <th>MAJ</th>
                    <th>MIN</th>

                }
                @if (form == "_CommonForm")
                {
                    <th>Sampling Size</th>
                    <th>Error Name</th>                   
                    <th>CRI</th>
                    <th>MAJ</th>
                    <th>MIN</th>
                }                
                <th>NG Total</th>
                <th>NG Rate</th>                        
                <th>Remark</th>
                <th>Created Date</th>
                <th>ReportItemID</th>               

            </tr>
        </thead>
        <tbody>
            @foreach (var rec in Model)
            {
                <tr>
                    @if (IsFinished == "PENDING" || IsFinished == "RETURN TO INSPECTOR")
                    {
                        <td>
                            <button class="btn btn-sm btn-danger"
                            onclick="deleteRecord(@rec.ReportItemID)">
                                Xóa
                            </button>
                        </td>
                    }

                    @if (form == "_DeliveryForm" || form=="_FinalForm" )
                    {
                        <td>@rec.Judgment</td>
                    }

                    @if (form == "_AppearanceForm")
                    {
                        <td>@rec.SamplingSize</td>
                        <td>@rec.ErrorName</td>
                        <td>@rec.CRI</td>
                        <td>@rec.MAJ</td>
                        <td>@rec.MIN</td>
                        <td>@rec.Standard</td>
                    }
                    @if (form == "_DimensionalForm")
                    {
                        <td>@rec.SamplingSize</td>
                        <td>@rec.ErrorName</td>
                        <td>@rec.Spec</td>
                        <td>@rec.SpecDetail</td>
                        <td>@rec.CRI</td>
                        <td>@rec.MAJ</td>
                        <td>@rec.MIN</td>                        
                    }
                    @if(form=="_CommonForm")
                    {
                        <td>@rec.SamplingSize</td>
                        <td>@rec.ErrorName</td>                       
                        <td>@rec.CRI</td>
                        <td>@rec.MAJ</td>
                        <td>@rec.MIN</td>
                    }                   
                    <td>@rec.NG_Total</td>
                    <td>@rec.NG_Rate</td>                                   
                    <td>@rec.Remark</td>                    
                    <td>@rec.CreatedDate.ToString("yyyy/MM/dd")</td>
                    <td>@rec.ReportItemID</td>                    
                </tr>
            }
        </tbody>
    </table>
}
