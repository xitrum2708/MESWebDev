
@model List<DictionaryDTO>

@{
    var languageCode = Context.Session.GetString("LanguageCode") ?? "vi";
    ViewData["Title"] = TranslationService.GetTranslation("TranslationManagement", languageCode);
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section ContentHeader {
    @await Html.PartialAsync("_Breadcrumb", ViewBag.Breadcrumbs as List<MESWebDev.DTO.BreadcrumbItemDto>)

}

<div class="app-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title fw-bold">
                            <i class="nav-icon bi bi-translate me-2"></i>
                            @TranslationService.GetTranslation("ListOfTranslations", languageCode)</h3>
                        <div class="card-tools d-flex justify-content-between align-content-center w-75">
                            <div class="input-group me-3 w-50">
                                <input type="text" class="form-control form-input-sm" id="quick_search" onkeyup="QuickSearch()" placeholder="Searching...">
                                <span class="input-group-text"><i class="bi bi-search"></i></span>
                            </div>
                            <a href="@Url.Action("Create", "Translation")" class="btn btn-primary btn-sm">
                                <i class="bi bi-plus-lg"></i> @TranslationService.GetTranslation("Add New", languageCode)
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class=" table-responsive" style="max-height: calc(100vh - 250px); overflow-y: auto; position:relative">
                            <table class="table table-bordered table-hover paginated" id="mytable">
                                <thead class="table-success text-center">
                                    <tr>
                                        <th>@TranslationService.GetTranslation("Key", languageCode)</th>
                                        <th>@TranslationService.GetTranslation("Language", languageCode)</th>
                                        <th>@TranslationService.GetTranslation("Value", languageCode)</th>
                                        <th>@TranslationService.GetTranslation("Actions", languageCode)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var translation in Model)
                                    {
                                        <tr>
                                            <td>@translation.Key</td>
                                            <td>@translation.LangId</td>
                                            <td>@translation.Value</td>
                                            <td>
                                                <a href="@Url.Action("Edit", "Translation", new { id = translation.LangId })" class="btn btn-warning btn-sm">
                                                    <i class="bi bi-pencil"></i> @TranslationService.GetTranslation("Edit", languageCode)
                                                </a>
                                                <form asp-action="Delete" asp-route-id="@translation.LangId" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this translation?');">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-danger btn-sm">
                                                        <i class="bi bi-trash"></i> @TranslationService.GetTranslation("Delete", languageCode)
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-footer pager p-0">
                        <partial name="_PagingPartialView" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/panigation.js?@DateTime.Now.Ticks"></script>
    <script>
        $(document).ready(function () {

        });

        //debugger
        function QuickSearch() {
            //debugger
            var inputString = $('#quick_search').val().toUpperCase();

            $('#mytable tbody tr').each(function () {
                var tr = $(this);
                tr.find('td').each(function () {
                    //debugger
                    var txtValue = $(this).text();
                    if (txtValue.toUpperCase().indexOf(inputString) > -1) { tr.show(); return false; }
                    else tr.hide();
                })
            })
        }
    </script>
}