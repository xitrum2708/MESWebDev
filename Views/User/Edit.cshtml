<div class="app-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card  card-warning">
                    <div class="card-header">
                        <h3 class="card-title fw-bold">
                            <i class="bi bi-pencil me-2"></i>
                            @TranslationService.GetTranslation("EditUser", languageCode) 
                        </h3>
                    </div>
                    <div class="card-body">
                        <form asp-action="Edit" method="post">
                            @Html.AntiForgeryToken()
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="@Model.User.Username" />
                            <div class="form-group mb-2">
                                <label asp-for="@Model.User.Username" class="control-label">@TranslationService.GetTranslation("Username", languageCode)</label>
                                <input asp-for="@Model.User.Username" class="form-control" disabled />
                            </div>

                            <div class="form-group mb-2">
                                <label asp-for="@Model.User.Password" class="control-label">@TranslationService.GetTranslation("Password", languageCode) (@TranslationService.GetTranslation("LeaveBlankToKeep", languageCode))</label>
                                <input asp-for="@Model.User.Password" type="password" class="form-control" />
                                <span asp-validation-for="@Model.User.Password" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-2">
                                <label asp-for="@Model.User.Email" class="control-label">@TranslationService.GetTranslation("Email", languageCode)</label>
                                <input asp-for="@Model.User.Email" class="form-control" />
                                <span asp-validation-for="@Model.User.Email" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-2">
                                <label asp-for="@Model.User.Fullname" class="control-label">@TranslationService.GetTranslation("FullName", languageCode)</label>
                                <input asp-for="@Model.User.Fullname" class="form-control" />
                                <span asp-validation-for="@Model.User.Fullname" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-2">
                                <label asp-for="@Model.User.LangId" class="control-label">@TranslationService.GetTranslation("Language", languageCode)</label>
                                <select asp-for="@Model.User.LangId" class="form-select" asp-items="@Model.LanguageSL">
                                    <option value="">@TranslationService.GetTranslation("SelectLanguage", languageCode)</option>
                                </select>
                                <span asp-validation-for="@Model.User.LangId" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-2">
                                <label asp-for="@Model.User.RoleId" class="control-label">@TranslationService.GetTranslation("Role", languageCode)</label>
                                <select asp-for="@Model.User.RoleId" class="form-select" asp-items="@Model.RoleSL">
                                    <option value="">@TranslationService.GetTranslation("SelectRole", languageCode)</option>
                                </select>
                                <span asp-validation-for="@Model.User.RoleId" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-2">
                                <label asp-for="@Model.User.IsActive" class="control-label">@TranslationService.GetTranslation("IsActive", languageCode)</label>
                                <input asp-for="@Model.User.IsActive" type="checkbox" class="form-check-input" />
                                @* <span asp-validation-for=""@Model.User.IsActive" class="text-danger"></span> *@
                            </div>

                            <div class="form-group mb-2">
                                <button type="submit" class="btn btn-warning">@TranslationService.GetTranslation("Save", languageCode)</button>
                                <a asp-action="Index" class="btn btn-secondary">@TranslationService.GetTranslation("BackToList", languageCode)</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}