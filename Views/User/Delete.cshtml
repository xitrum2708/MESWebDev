@using MESWebDev.Models.VM
@using MESWebDev.Services
@inject ITranslationService TranslationService
@model MasterVM

@{
    var languageCode = Context.Session.GetString("LanguageCode") ?? "vi";
    ViewData["Title"] = TranslationService.GetTranslation("DeleteUser", languageCode);
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section ContentHeader {
    @await Html.PartialAsync("_Breadcrumb", ViewBag.Breadcrumbs as List<MESWebDev.DTO.BreadcrumbItemDto>)
}

<div class="app-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card card-danger">
                    <div class="card-header fw-bold">
                        
                        <h3 class="card-title">
                            <i class="bi bi-trash3"></i>
                            @TranslationService.GetTranslation("ConfirmDelete", languageCode) </h3>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-2">
                                @TranslationService.GetTranslation("Username", languageCode)
                            </dt>
                            <dd class="col-sm-10 mb-2">
                                @Model.User.Username
                            </dd>
                            <dt class="col-sm-2">
                                @TranslationService.GetTranslation("Email", languageCode)
                            </dt>
                            <dd class="col-sm-10 mb-2">
                                @Model.User.Email
                            </dd>
                            <dt class="col-sm-2">
                                @TranslationService.GetTranslation("FullName", languageCode)
                            </dt>
                            <dd class="col-sm-10 mb-2">
                                @Model.User.Fullname
                            </dd>
                            <dt class="col-sm-2">
                                @TranslationService.GetTranslation("Language", languageCode)
                            </dt>
                            <dd class="col-sm-10 mb-2">
                                @Model.User.LangName
                            </dd>
                            <dt class="col-sm-2">
                                @TranslationService.GetTranslation("Role", languageCode)
                            </dt>
                            <dd class="col-sm-10 mb-2">
                                @Model.User.RoleName
                            </dd>
                            <dt class="col-sm-2">
                                @TranslationService.GetTranslation("IsActive", languageCode)
                            </dt>
                            <dd class="col-sm-10 mb-2">
                                @(Model.User.IsActive ? TranslationService.GetTranslation("Yes", languageCode) : TranslationService.GetTranslation("No", languageCode))
                            </dd>
                        </dl>
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="@Model.User.Username" />
                            <button type="submit" class="btn btn-danger">@TranslationService.GetTranslation("Delete", languageCode)</button>
                            <a asp-action="Index" class="btn btn-secondary">@TranslationService.GetTranslation("BackToList", languageCode)</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}