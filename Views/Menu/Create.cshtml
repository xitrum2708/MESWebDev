<div class="app-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Add New Menu</h3>
                    </div>
                    <div class="card-body">
                        <form asp-action="Create" method="post">
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <label asp-for="Order">Sort Order</label>
                                <input asp-for="Order" class="form-control" type="number" />
                                <span asp-validation-for="Order" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="EnName">Title (English) </label>
                                <input asp-for="EnName" class="form-control" />
                                <span asp-validation-for="EnName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ViName">Title (VN) </label>
                                <input asp-for="ViName" class="form-control" />
                                <span asp-validation-for="ViName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ParentId">Parent Menu</label>
                                <select asp-for="ParentId" class="form-control">
                                    <option value="">None</option>
                                    @await Html.PartialAsync("_MenuOptions", (Menus: Model.AvailableParents, Level: 0))
                                </select>
                                <span asp-validation-for="ParentId" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Controller">Controller</label>
                                <input asp-for="Controller" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label asp-for="Action">Action</label>
                                <input asp-for="Action" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label asp-for="IconString">Icon (Bootstrap Icons class, e.g., bi bi-circle)</label>
                                <input asp-for="IconString" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label asp-for="Note">Note</label>
                                <input asp-for="Note" class="form-control" />
                            </div>
                            
                            <div class="form-group form-check">
                                <input asp-for="IsActive" checked class="form-check-input" type="checkbox" />
                                <label asp-for="IsActive" class="form-check-label">Is Active</label>
                            </div>

                            <button type="submit" class="btn btn-primary">Create</button>
                            <a href="@Url.Action("Index", "Menu")" class="btn btn-secondary">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}