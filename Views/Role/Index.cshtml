
@model List<RoleModel>

@{
    var languageCode = Context.Session.GetString("LanguageCode") ?? "vi";
    ViewData["Title"] = TranslationService.GetTranslation("RoleManagement", languageCode);
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section ContentHeader {
    @await Html.PartialAsync("_Breadcrumb", ViewBag.Breadcrumbs as List<MESWebDev.DTO.BreadcrumbItemDto>)
}
<div class="app-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header card-success">
                        <h3 class="card-title">
                            <i class="bi bi-shield-fill-check me-2"></i>
                            @TranslationService.GetTranslation("ListofRoles", languageCode)
                        </h3>

                        <div class="card-tools d-flex justify-content-between align-content-center w-75">
                            <div class="input-group me-3 w-50">
                                <input type="text" class="form-control form-input-sm" id="quick_search" onkeyup="QuickSearch()" placeholder="Searching...">
                                <span class="input-group-text"><i class="bi bi-search"></i></i></span>
                            </div>

                            <a href="@Url.Action("Create", "Role")" class="btn btn-primary btn-sm me-3">
                                <i class="bi bi-person-plus me-1"></i>
                                @TranslationService.GetTranslation("Add Role", languageCode)
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class=" table-responsive" style="max-height: calc(100vh - 250px); overflow-y: auto; position:relative">
                            <table class="table table-bordered table-hover paginated" id="mytable">
                                <thead class="table-success text-center">
                                    <tr>
                                        <th>@TranslationService.GetTranslation("RoleName", languageCode)</th>
                                        <th>@TranslationService.GetTranslation("Description", languageCode)</th>
                                        <th>@TranslationService.GetTranslation("CreatedBy", languageCode)</th>
                                        <th>@TranslationService.GetTranslation("CreatedAt", languageCode)</th>
                                        <th>@TranslationService.GetTranslation("Action", languageCode)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var role in Model)
                                    {
                                        <tr>
                                            <td>@role.RoleName</td>
                                            <td>@role.Note</td>
                                            <td>@role.CreatedBy</td>
                                            <td>@role.CreatedDt.ToString("yyyy/MM/dd")</td>
                                            <td>
                                                <a href="@Url.Action("Edit", "Role", new { id = role.RoleId })" class="btn btn-warning btn-sm">
                                                    <i class="bi bi-pencil"></i> @TranslationService.GetTranslation("Edit", languageCode)
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@role.RoleId" class="btn btn-sm btn-danger">@TranslationService.GetTranslation("Delete", languageCode)</a>                                 
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>


                    <div class="card-footer pager p-0">

                        <partial name="_PagingPartialView" />

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/panigation.js"></script>
    <script>
        $(document).ready(function () {

        });

        //debugger
        function QuickSearch() {
            //debugger
            var inputString = $('#quick_search').val().toUpperCase();

            $('#mytable tbody tr').each(function () {
                var tr = $(this);
                tr.find('td').each(function () {
                    //debugger
                    var txtValue = $(this).text();
                    if (txtValue.toUpperCase().indexOf(inputString) > -1) { tr.show(); return false; }
                    else tr.hide();
                })
            })
        }
    </script>
}