
@model LanguageModel

@{
    var languageCode = Context.Session.GetString("LanguageCode") ?? "vi";
    ViewData["Title"] = TranslationService.GetTranslation("CreateLanguage", languageCode);
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section ContentHeader {
    @await Html.PartialAsync("_Breadcrumb", ViewBag.Breadcrumbs as List<MESWebDev.DTO.BreadcrumbItemDto>)
}

<div class="app-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title fw-bold">
                            <i class="bi bi-person-plus me-2"></i>
                            @TranslationService.GetTranslation("AddNewLanguage", languageCode)</h3>
                    </div>
                    <div class="card-body">
                        <form asp-action="Create" method="post">
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <label asp-for="Culture">@TranslationService.GetTranslation("LanguageCode", languageCode)</label>
                                <input asp-for="Culture" class="form-control" />
                                <span asp-validation-for="Culture" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Name">@TranslationService.GetTranslation("LanguageName", languageCode)</label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group form-check">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                <label asp-for="IsActive" class="form-check-label">Is Active</label>
                            </div>
                            <button type="submit" class="btn btn-primary">@TranslationService.GetTranslation("Create", languageCode)</button>
                            <a href="@Url.Action("Index", "Language")" class="btn btn-secondary">@TranslationService.GetTranslation("Cancel", languageCode)</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}