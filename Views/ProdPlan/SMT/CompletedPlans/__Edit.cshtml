
@model SMTProdPlanModel
@{
    int i = 0;
}

<form id="fEdit" method="post">
    @Html.AntiForgeryToken()
    <div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">@* " modal-lg"> *@
            <div class="modal-content">
                <div class="modal-header table-success">
                    <h5 class="modal-title">
                        <i class="bi bi-pencil-square"></i>
                        @TranslationService.Trans("Edit")
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body bg-warning bg-opacity-25">

                    <input type="hidden" asp-for="Id" />
                    <div class="row g-2">
                        <div class="col-4">@TranslationService.Trans("FinishedDt")</div>
                        <div class="col-8">
                            <div class="input-group">
                                <input class="form-control" type="text" id="startDate" placeholder="Start Date" asp-for="FinishedDt"
                                       value="@Convert.ToDateTime(Model.FinishedDt).ToString("yyyy/MM/dd")" required />
                                <span class="input-group-text"><i class="bi bi-calendar-week-fill"></i></span>
                            </div>
                        </div>

                        <div class="col-4">@TranslationService.Trans("Model")</div>
                        <div class="col-8"><input type="text" class="form-control" asp-for="Model" disabled /></div>
                        <div class="col-4">@TranslationService.Trans("Lotno")</div>
                        <div class="col-8"><input type="text" class="form-control" asp-for="Lotno" disabled /></div>
                        <div class="col-4">@TranslationService.Trans("PCBNo")</div>
                        <div class="col-8"><input type="text" class="form-control  _Size" asp-for="PCBNo" required /></div>
                        <div class="col-4">@TranslationService.Trans("IssuedQty")</div>
                        <div class="col-8"><input type="number" class="form-control  _Balance" asp-for="IssuedQty" /></div>
                        <div class="col-4">@TranslationService.Trans("BalanceQty")</div>
                        <div class="col-8"><input type="number" class="form-control  _Balance" asp-for="BalanceQty"  /></div>
                        <div class="col-4">@TranslationService.Trans("Remark")</div>
                        <div class="col-8"><input type="text" class="form-control  _Balance" asp-for="Remark" /></div>
                        <div class="col-4">@TranslationService.Trans("Warning")</div>
                        <div class="col-8"><input type="text" class="form-control  _Balance" asp-for="Warning" /></div>
                        <div class="col-4">@TranslationService.Trans("UVNote")</div>
                        <div class="col-8"><input type="text" class="form-control  _Balance" asp-for="UVNote" /></div>
                        <div class="col-4">@TranslationService.Trans("ETPCB")</div>
                        <div class="col-8"><input type="text" class="form-control  _Balance" asp-for="ETPCB" /></div>
                    </div>
                
                </div>
                <div class="modal-footer">
                    <a id="btnEdit" onclick="Edit()" class="btn btn-sm btn-info">
                        <i class="bi bi-floppy"></i>
                        @TranslationService.Trans("save")
                    </a>
                    <button type="button" class="btn btn-sm btn-secondary" data-bs-dismiss="modal">
                        <i class="fa-regular fa-circle-xmark"></i>
                        @TranslationService.Trans("close")
                    </button>
                </div>
            </div>

        </div>
    </div>

</form>
