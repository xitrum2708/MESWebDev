@using MESWebDev.Models.Setting
@model SMTPlanModel
@{
    int i = 0;
}
<form id="fAdd" method="post">
    <div class="modal fade" id="addModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header table-success">
                    <h5 class="modal-title">
                        <i class="bi bi-plus-circle"></i>
                        @TranslationService.Trans("Add")
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body bg-success bg-opacity-25">

                    <div class="row g-2">
                        <div class="row g-2">
                            <div class="col-4">@TranslationService.Trans("From")</div>
                            <div class="col-8">
                                <div class="input-group">
                                    <input class="form-control" type="text" id="startDate" placeholder="Start Date" asp-for="StartDt" />
                                    <span class="input-group-text"><i class="bi bi-calendar-week-fill"></i></span>
                                </div>
                            </div>

                            <div class="col-4">@TranslationService.Trans("To")</div>
                            <div class="col-8">
                                <div class="input-group">
                                    <input class="form-control" type="text" id="endDate" placeholder="End Date" asp-for="EndDt" />
                                    <span class="input-group-text"><i class="bi bi-calendar-week-fill"></i></span>
                                </div>
                            </div>

                            <div class="col-4">@TranslationService.Trans("Model")</div>
                            <div class="col-8"><input type="text" class="form-control" asp-for="Model" /></div>
                            <div class="col-4">@TranslationService.Trans("Lotno")</div>
                            <div class="col-8"><input type="text" class="form-control" asp-for="Lotno" /></div>
                            <div class="col-4">@TranslationService.Trans("Size")</div>
                            <div class="col-8"><input type="number" class="form-control _Size" asp-for="Size" /></div>
                            <div class="col-4">@TranslationService.Trans("Balance")</div>
                            <div class="col-8"><input type="number" class="form-control _Balance" asp-for="Balance" /></div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <a id="btnAdd" onclick="Add()" class="btn btn-sm btn-info">
                        <i class="bi bi-floppy"></i>
                        @TranslationService.Trans("save")
                    </a>
                    <button type="button" class="btn btn-sm btn-secondary" data-bs-dismiss="modal">
                        <i class="fa-regular fa-circle-xmark"></i>
                        @TranslationService.Trans("close")
                    </button>
                </div>
        </div>
    </div>
</div>
</form>
