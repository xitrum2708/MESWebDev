@using MESWebDev.Models.ProdPlan
@model ProdPlanViewModel
<form id="fUpdatePara" method="post">
    <div class="modal fade" id="paraModal" tabindex="-1" aria-labelledby="paraLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header d-flex justify-content-between align-items-center w-100">
                    <h5 class="modal-title mx-3" id="calendarTitle">
                        <i class="bi bi-file-earmark-ppt-fill"></i>
                        Parameter Setup</h5>

                    <button type="button" class="btn-close ms-auto" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row row-gap-3">
                        <div class="col-12">
                            <label for="model_stransfer_time" class="form-label">Model change time (minutes): </label>
                            <input type="number" class="form-control" asp-for="model_stransfer_time" id="model_stransfer_time" value="@(Model.model_stransfer_time ?? 30)">

                            <label for="new_model_rate" class="form-label">New model rate (%): </label>
                            <input type="number" class="form-control" asp-for="new_model_rate" id="new_model_rate" value="@(Model.new_model_rate ?? 65)">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <a class="btn btn-success" id="saveparas">
                        <i class="bi bi-save"></i>
                        Save
                    </a>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</form>

