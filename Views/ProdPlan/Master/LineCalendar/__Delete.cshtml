@* <form asp-action="DeleteUser" asp-controller="User" method="post"> *@
<form >
    <input hidden id="flowList" name="flowList" />
    <div class="modal" id="deleteModal">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h5 class="modal-title">@TranslationService.Trans("Delete")</h5>
                    <button type="button" class="btn btn-sm btn-close" data-bs-dismiss="modal"></button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <input type="hidden" id="deleteId" />
                    <div class="row m-3">
                        <h5>
                            @TranslationService.Trans("msg_delete_confirm")
                        </h5>
                    </div>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <a onclick="Delete()" class="btn btn-sm btn-danger">
                        <i class="fa-regular fa-floppy-disk"></i>
                        @TranslationService.Trans("confirm")
                    </a>
                    <button type="button" class="btn btn-sm btn-secondary" data-bs-dismiss="modal">
                        <i class="fa-regular fa-circle-xmark"></i>
                        @TranslationService.Trans("cancel")
                    </button>
                </div>

            </div>
        </div>
    </div>
</form>