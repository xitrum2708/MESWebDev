        <div class="row mt-5 me-2">
            <table class="table table-bordered" style="table-layout: fixed; width: 100%;">
                <thead>
                    <tr>
                        @foreach (DataColumn column in Model.detail_data.Columns)
                        {
                            <th>@column.Caption</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (DataRow row in Model.detail_data.Rows)
                    {
                        <tr>
                            @foreach (var item in row.ItemArray)
                            {
                                if (item is int intValue)
                                {
                                    <td>@intValue.ToString("#,##0", System.Globalization.CultureInfo.GetCultureInfo("en-US"))</td>
                                }
                                else if (item is long longValue)
                                {
                                    <td>@longValue.ToString("#,##0", System.Globalization.CultureInfo.GetCultureInfo("en-US"))</td>
                                }
                                else if (item is decimal decValue)
                                {
                                    <td>@decValue.ToString("#,##0.##", System.Globalization.CultureInfo.GetCultureInfo("en-US"))</td> <!-- allow decimals -->
                                }
                                else
                                {
                                    <td>@item</td>
                                }
                            }
                        </tr>
                    }
                </tbody>
            </table>

